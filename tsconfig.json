{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "declaration": true,
        "sourceMap": false,
        "outDir": "lib",
        "baseUrl": ".",
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ]
}